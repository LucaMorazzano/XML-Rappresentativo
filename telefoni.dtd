                      <!ELEMENT componenti (processore, schedagrafica, ram, schedarete, display)>
                            <!ELEMENT processore (nome, frequenza)>
                                            <!ELEMENT frequenza (#PCDATA)>
                                            
                            <!ELEMENT schedagrafica (nome, vram)>
                                          <!ELEMENT vram (#PCDATA)>
                                          
                            <!ELEMENT ram (nome,quantita)>
                                          <!ELEMENT quantita (#PCDATA)>
                            
                            <!ELEMENT schedarete (nome)>
                                      <!ATTLIST schedarete 
